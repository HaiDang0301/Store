<div class="mt-4" style="margin-left: 150px;">
  <div class="row">
    {{#each products}}
    <div class="col-sm-7 col-lg-4">
      <div class="card" style="width: 18rem;margin-top: 30px;border-radius: 30px;">
        <div class="image">
          <a href="/product/{{this.slug}}">
            <img src="{{this.image}}" class="card-img-top" alt="...">
          </a>
        </div>
        <div class="card-body" style="width: 300px; height: 200px;">
          <a href="/product/{{this.slug}}" style="text-decoration: none;">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
          <p class="card-text">Gi√°: {{this.price}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
</div>